<div class="admin__product__table">
    <h2>Các sản phẩm người dùng đã đặt</h2>
    <br />
    <table class="table table-striped admin__table_group">
        <thead>
            <tr>
                <th>Stt</th>
                <th>Id SP</th>
                <th>Tên SP</th>
                <th>Hình dáng</th>
                <th>Màu</th>
                <th>SL</th>
                <th>Thành tiền</th>
                <th>Tên người đặt</th>
                <th>Địa chỉ</th>
                <th>SĐT</th>
                <th>CreateAT</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% if(response.length> 0) { response.forEach((value, index)=>{ %>
                <tr>
                    <td>
                        <%= index+1 %>
                    </td>
                    <td><a href="/products/<%= value.productId._id %>/detail">
                            <%= value.productId._id %>
                        </a> </td>
                    <td>
                        <%= value.productId.name %>
                    </td>
                    <td>
                        <%= value.shape %>
                    </td>
                    <td>
                        <%= value.color %>
                    </td>
                    <td>
                        <%= value.soLuong %>
                    </td>
                    <td style="color: red; font-weight: 500;">
                        <%= (value.productId.cost * value.soLuong).toString().replace(/\B(?=(\d{3})+(?!\d))/g, "." )
                            + "đ" ; %>
                    </td>
                    <td>
                        <%= value.fullname %>
                    </td>
                    <td>
                        <%= value.diaChi.tinh_thanhPho %>, <br />
                            <%= value.diaChi.quan_huyen %>, <br />
                                <%= value.diaChi.xa_phuong %>, <br />
                                    <%= value.diaChi.detail %>, <br />
                    </td>
                    <td>
                        <%= value.sdt %>
                    </td>
                    <td>
                        <%= value.createdAt %>
                    </td>
                    <td>
                        <form action="/admin/orders/<%= value._id %>/delete?_method=PATCH" method="POST">
                            <a href="#" id="jsRestoreProductBtn">restore</a>
                        </form>
                        <br />
                        <form action="/admin/orders/<%= value._id %>/forcedelete?_method=DELETE" method="POST">
                            <a href="#" id="jsDeleteProductBtn">delete</a>
                        </form>
                    </td>
                </tr>
                <% })} else{ %>
                    <tr>
                        <td colspan="11" style="text-align: center;">Không có sản phẩm đã xoá</td>
                    </tr>
                    <% } %>
        </tbody>
    </table>
</div>