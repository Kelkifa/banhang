<div class="admin__product__table">
    <h2>Danh sách người dùng</h2>
    <br />
    <table class="table table-striped admin__table_group">
        <thead>
            <tr>
                <th>Picture</th>
                <th>ID</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Phone number</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% if(response){ response.forEach(value=>{ %>
                <tr>
                    <td>
                        <div class="table__image__container">
                            <img src="<%= value.picture %>" alt="fail">
                        </div>
                    </td>
                    <td>
                        <%= value._id %>
                    </td>
                    <td>
                        <%= value.name %>
                    </td>
                    <td>
                        <%= value.email %>
                    </td>
                    <td>
                        <%= value.phoneNumber %>
                    </td>
                    <td>
                        <form action="/admin/users/<%= value._id %> /delete?_method=DELETE" method="POST">
                            <a href="#" id="jsDeleteProductBtn">delete</a>
                        </form>
                    </td>
                </tr>
                <%})} else{ %>
                    <tr>
                        <td colspan="6" style="text-align:center;">Không có nguòi dùng được lưu</td>
                    </tr>
                    <% } %>
        </tbody>
    </table>
</div>